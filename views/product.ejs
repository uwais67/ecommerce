<!DOCTYPE html>
<html>
<head>
  <title>Products</title>
</head>
<body>
  <h1>Products</h1>
  
  <% products.forEach(product => { %>
    <div>
      <h2><%= product.name %></h2>
      <p><%= product.description %></p>
      <p>Price: $<%= product.price.toFixed(2) %></p>
      <form action="/cart/add-to-cart/<%= product._id %>" method="post">
        <button type="submit">Add to Cart</button>
      </form>
      <hr>
    </div>
  <% }) %>
</body>
</html>
